@page "/"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "User,Developer")]

<PageTitle>Home</PageTitle>

<div class="container mx-auto px-4 py-8">
    <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-800 mb-4">Welcome to FoodRescue</h1>
        <p class="text-xl text-gray-600">Connecting food donors with those in need</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-12">
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-4xl mb-4">🥗</div>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Donate Food</h2>
            <p class="text-gray-600">Share surplus food from your business or home with local communities.</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-4xl mb-4">🚚</div>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Track Pickups</h2>
            <p class="text-gray-600">Manage and monitor food collection and distribution in real-time.</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-4xl mb-4">📊</div>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">View Analytics</h2>
            <p class="text-gray-600">See the impact of your donations with detailed statistics.</p>
        </div>
    </div>
</div>
