@model Booker.Pages.IndexModel.PagedListViewModel

@if (Model.Items.Count == 0)
{
    <p>Brak wyników...</p>
}
else
{
    @foreach (var itemModel in Model.Items)
    {
        @await Html.PartialAsync("_BookTile", itemModel)

        @if (itemModel == Model.Items.Last() && Model.HasMorePages)
        {
            <div hx-get=""
                 hx-trigger="revealed"
                 hx-swap="outerHTML"
                 hx-indicator="#ind"
                 hx-include=".filter > form"
                 hx-vals='{"pageNumber" : @(Model.Params.PageNumber + 1)}'>
            </div>
        }
    }
}