@using Microsoft.AspNetCore.Identity
@using Booker.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul>
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Zarządzaj">Witaj @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <form style="display: contents;" id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout">Wyloguj</button>
        </form>
    </li>
}
else
{
    <li>
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Zarejestruj się</a>
    </li>
    <li>
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Zaloguj się</a>
    </li>
}
</ul>
