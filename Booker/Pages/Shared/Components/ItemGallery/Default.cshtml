@model ItemGalleryViewComponent.ItemsListModel

@foreach (var item in Model.Items)
{
    @await Html.PartialAsync("_BookTile", new ItemGalleryViewComponent.ItemModel(
                item.Item,       
                item.FirstPhoto, 
                item.Params      
            ))
}

@if (Model.HasMorePages)
{
    <div hx-get=""
         hx-trigger="revealed"
         hx-swap="outerHTML"
         hx-indicator="#ind"
         hx-include=".filter > form"
         hx-vals='{"pageNumber" : @(Model.PageNumber + 1)}'>
    </div>
}
