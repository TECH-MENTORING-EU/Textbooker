@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<h1>@ViewData["Title"]</h1>

<section class="login-form">
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div>
            <label asp-for="Input.Email">Nazwa użytkownika / e-mail:</label>
            <input asp-for="Input.Email" autocomplete="username" required placeholder="Nazwa użytkownika / e-mail" />
            <small><span asp-validation-for="Input.Email"></span></small>
        </div>
        <div>
            <label asp-for="Input.Password">Hasło:</label>
            <input asp-for="Input.Password" autocomplete="current-password" required placeholder="Hasło" />
            <small><span asp-validation-for="Input.Password"></span></small>
        </div>
        <div>
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                Zapamiętaj mnie
            </label>
        </div>
        <div>
            <button id="login-submit" type="submit">Zaloguj się</button>
        </div>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
            </p>
            @* <p> *@
            @*     <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj jako nowy użytkownik</a> *@
            @* </p> *@
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie e-mail potwierdzający</a>
            </p>
        </div>
    </form>
</section>

