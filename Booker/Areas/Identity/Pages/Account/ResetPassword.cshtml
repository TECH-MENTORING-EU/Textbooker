@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset hasła";
}

<h1>@ViewData["Title"]</h1>
<section class="login-form">
    <form method="post">
        <h2>Zresetuj swoje hasło.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Input.Code" type="hidden" />
        <div>
            <label asp-for="Input.Email">E-mail:</label>
            <input asp-for="Input.Email" autocomplete="username" required placeholder="E-mail" />
            <small><span asp-validation-for="Input.Email"></span></small>
        </div>
        <div>
            <label asp-for="Input.Password">Nowe hasło:</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" required placeholder="Hasło" />
            <small><span asp-validation-for="Input.Password"></span></small>
        </div>
        <div>
            <label asp-for="Input.ConfirmPassword">Potwierdź nowe hasło:</label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" required placeholder="Hasło" />
            <small><span asp-validation-for="Input.ConfirmPassword"></span></small>
        </div>
        <button type="submit">Zresetuj</button>
    </form>
</section>
